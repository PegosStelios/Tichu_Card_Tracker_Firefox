{
	"name":"Card Tracker for Dod Tichu",
	"version":"1.0",
	"description":"Tichu: Δες ποια φύλλα δεν έχουν παιχτεί!",
	"content_scripts":[
		{
			"matches":[
				"*://apps.facebook.com/dodcommunity/*",
				"*://www.dod.gr/*"
			],
			"js":[
				"background.js"
			],
			"run_at":"document_idle"
		}
	],
	"background":{
		"scripts":[
			"background.js"
		],
		"persistent":false
	},
	"permissions":[
		"storage",
		"tabs",
		"*://apps.facebook.com/dodcommunity/*",
		"*://www.dod.gr/*"
	],
	"browser_action":{
		"default_icon":"icons/logo19.png",
		"default_popup":"popup.html"
	},
	
	"icons": {
		"16": "icons/logo16.png",
		"19": "icons/logo19.png",
		"38": "icons/logo38.png",
		"48": "icons/logo48.png",
		"128": "icons/logo128.png"
	  },
	"manifest_version":2
}